@model IEnumerable<Movies>

@{
    ViewData["Title"] = "Home Page";
    var imageSource = ViewData["ImageSource"];
    var showAdult = false;
    if (ViewData["showAdult"] is bool)
    {
        showAdult = (bool)ViewData["showAdult"];
    }
}
<style>
    .switch {
        position: relative;
        display: inline-block;
        width: 30px;
        height: 17px;
    }
        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }
    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        -webkit-transition: .4s;
        transition: .4s;
    }
        .slider:before {
            position: absolute;
            content: "";
            height: 13px;
            width: 13px;
            left: 2px;
            bottom: 2px;
            background-color: white;
            -webkit-transition: .4s;
            transition: .4s;
        }
    input:checked + .slider {
        background-color: #2196F3;
    }
    input:focus + .slider {
        box-shadow: 0 0 1px #2196F3;
    }
    input:checked + .slider:before {
        -webkit-transform: translateX(13px);
        -ms-transform: translateX(13px);
        transform: translateX(13px);
    }
    /* Rounded sliders */
    .slider.round {
        border-radius: 17px;
    }
        .slider.round:before {
            border-radius: 50%;
        }
</style>
<div class="container-fluid">
    <h2>Willkommen</h2>
    <hr />
    <div class="row">
        <div class="col-sm-6">
            <div class="card shadow p-3 mb-5 bg-white rounded">
                <div class="card-body">
                    <h5 class="card-title" style="color:blue; background-image: linear-gradient(to right, aliceblue, white); "><b>Neu</b></h5>
                    @if (showAdult)
                    {
                        <label class="switch" id="showAll">
                            <input type="checkbox">
                            <span class="slider round"></span>
                        </label>
                    }
                    <div>
                        <table class="table table-striped" id="homeIndex">
                            <thead>
                                <tr>
                                    <th>Titel</th>
                                    <th>Genre</th>
                                    <th>Daten-<br />träger</th>
                                    <th>Lager-<br />ort</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card shadow p-3 mb-5 bg-white rounded">
                <div class="card-body">
                    <h5 class="card-title" style="color:forestgreen; background-image: linear-gradient(to right, aliceblue, white)">Heutige Geburtstage</h5>
                    <table class="table table-striped compact nowrap" id="birthdayTable">
                        <thead>
                            <tr>
                                <th style="width:40px">&nbsp;</th>
                                <th>Name</th>
                                <th>Aktuelles Alter</th>
                                <th>Nationalität</th>
                                <th>Rolle</th>
                                <th>Geschlecht</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
            <div class="card shadow p-3 mb-5 bg-white rounded">
                <div class="card-body">
                    <h5 class="card-title" style="color:dimgrey; background-image: linear-gradient(to right, aliceblue, white)">Heutige Todestage</h5>
                    <table class="table table-striped compact" id="obitTable">
                        <thead>
                            <tr>
                                <th style="width:40px">&nbsp;</th>
                                <th>Name</th>
                                <th>Aktuelles Alter</th>
                                <th>Nationalität</th>
                                <th>Rolle</th>
                                <th>Geschlecht</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <partial name="_DataTableScripts" />
    <partial name="_ShowImageModalScripts" />

    <script>
        $(document).ready(function () {
             $('#homeIndex').DataTable({
                ordering: false,
                ajax: {
                    url: appRootPath + '/api/MoviesApi/GetNewMovies',
                    dataSrc: ''
                },
                columns: [
                    {
                        data: 'Name',
                         render: function (data, type, full) {
                            if (data && type === 'display') {
                                var url = '@Url.Action("Details", "Movies")' + '/' + full["Id"];
                                return '<a href="' + url + '" title="ansehen">' + full["Name"];
                            }
                            return '';
                        },
                        type: 'html'
                    },
                    { data: 'Genre.Name'},
                    { data: 'RecordCarrier.Name'},
                    { data: 'StorageLocation.Name'},
                ],
                paging: false,
                searching: false,
                fixedHeader: {
                    header: true,
                    footer: false
                },
            });
            $('#birthdayTable').DataTable({
                ordering: true,
                ajax: {
                    url: appRootPath + '/api/PersonApi/TodaysBirtdays',
                    dataSrc: ''
                },
                columns: [
                    {
                        data: 'PersonImages',
                        render: function (data, type) {
                            if (data && data.length > 0  && type === 'display') {
                                var src = '@imageSource/' + data[0].PersonId + '/' + data[0].Name;
                                return '<div class="image-container">'
                                    + '<img src="' + src + '" class="image-small" style="max-height: 50px">'
                                    + '<img src="' + src + '" class="image-large">'
                                    + '</div>';
                            }
                            return '';
                        },
                        type: 'html',
                        orderable: false
                    },
                    {
                        data: 'Name',
                        render: function (data, type, full) {
                            if (data && type === 'display') {
                                var url = '@Url.Action("Details", "Person")' + '/' + full["Id"];
                                return '<a href="' + url + '" title="ansehen">' + full["Name"];
                            }
                            return '';
                        },
                        type: 'html'
                    },
                    {
                        data: 'ActorsAge',
                        type: 'num'
                    },
                    {
                        data: 'Nationality.Name',
                        type: 'html'
                    },
                    {
                        data: 'PersonType.Name',
                        type: 'html'
                    },
                    {
                        data: 'Sex.Name',
                        type: 'html'
                    },
                ],
                order: [[4, 'asc'],[2, 'desc'],[1, 'asc']],
                searching: false,
                fixedHeader: {
                    header: true,
                    footer: false
                },
                lengthMenu: [[5, 10, -1], [5, 10, "All"]],
                iDisplayLength: 5,
                layout: {
                    topStart: 'pageLength',
                    topEnd: 'paging',
                    bottomEnd: 'info',
                    bottomStart: null
                },
                responsive: true,
                stateSave: true,
                stateSaveCallback: function (settings, data) {
                    var dataTableConfigs = JSON.parse(sessionStorage.getItem("dataTableConfigs") || '{}');
                    dataTableConfigs[settings.sTableId] = data;
                    sessionStorage.setItem('dataTableConfigs', JSON.stringify(dataTableConfigs));
                },
                stateLoadCallback: function (settings, callback) {
                    var restoreFilter = window.location.href.slice(window.location.href.indexOf('?') + 1)
                        .split('&')
                        .filter(function (param) {
                            return param.toLowerCase().indexOf('restorefilter') === 0;
                        }).length > 0;
                    if (restoreFilter) {
                        var dataTableConfigs = JSON.parse(sessionStorage.getItem("dataTableConfigs") || '{}');
                        if (dataTableConfigs[settings.sTableId]) {
                            return dataTableConfigs[settings.sTableId];
                        }
                    }
                    return null;
                },
            });

            $('#birthdayTable tbody').on('mouseenter', '.image-container', function () {
                onMouseEnter(this);
            });

            $('#birthdayTable tbody').on('mouseleave', '.image-container', function () {
                onMouseLeave(this);
            });

            $('#obitTable').DataTable({
                ordering: true,
                ajax: {
                    url: appRootPath + '/api/PersonApi/TodaysObits',
                    dataSrc: ''
                },
                columns: [
                    {
                        data: 'PersonImages',
                        render: function (data, type, full, meta) {
                            if (data && data.length > 0 && type === 'display') {
                                var src = '@imageSource/' + data[0].PersonId + '/' + data[0].Name;
                                return '<div class="image-container">'
                                    + '<img src="' + src + '" class="image-small" style="max-height: 50px">'
                                    + '<img src="' + src + '" class="image-large">'
                                    + '</div>';
                            }
                            return '';
                        },
                        type: 'html',
                        orderable: false
                    },
                    {
                        data: 'Id',
                        render: function (data, type, full, meta) {
                            if (data && type === 'display') {
                                var url = '@Url.Action("Details", "Person")' + '/' + data;
                                return '<a href="' + url + '" title="ansehen">' + full["Name"];
                            }
                            return '';
                        }
                    },
                    { data: 'ActorsAge' },
                    { data: 'Nationality.Name' },
                    { data: 'PersonType.Name' },
                    { data: 'Sex.Name' },
                ],
                searching: false,
                fixedHeader: {
                    header: true,
                    footer: false
                },
                lengthMenu: [[5, 10, -1], [5, 10, "All"]],
                iDisplayLength: 5,
                order: [[1, 'asc']],
                // layout: {
                //     topStart: 'pageLength',
                //     topEnd: 'paging',
                //     bottomEnd: 'info',
                //     bottomStart: null
                // },
                responsive: true,
                //dom: 'lpftrip',
            });

            $('#obitTable tbody').on('mouseenter', '.image-container', function () {
                onMouseEnter(this);
            });

            $('#obitTable tbody').on('mouseleave', '.image-container', function () {
                onMouseLeave(this);
            });

            $('#showAll').click(function(){
                executeShowAll();
                
            });
        })

        function executeShowAll(){
            var checkBox = $('input[type="checkbox"]');
            if (checkBox.prop('checked')) {
                var url = appRootPath + '/api/MoviesApi/GetAllNewMovies';
                $.ajax({
                    url: url,
                    // type: 'get',
                    // async: false,
                    statusCode: {
                        404: function () {
                            alert("function not found");
                        }
                    },
                    success: function (content) {
                        var homeIndexTable = $('#homeIndex').DataTable();
                        homeIndexTable.clear();
                        homeIndexTable.rows.add(JSON.parse(content)); //.draw();
                        homeIndexTable.draw();
                    },
                    error: function (response) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Beim Laden der Daten ist ein Fehler aufgetreten!',
                            footer: response.responseText
                        })
                    }
                })
            }
            else
            {
               var url = appRootPath + '/api/MoviesApi/GetNewMovies';
                $.ajax({
                    url: url,
                    statusCode: {
                        404: function () {
                            alert("function not found");
                        }
                    },
                    success: function (content) {
                        var homeIndexTable = $('#homeIndex').DataTable();
                        homeIndexTable.clear();
                        homeIndexTable.rows.add(JSON.parse(content)); //.draw();
                        homeIndexTable.draw();
                    },
                    error: function (response) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Beim Laden der Daten ist ein Fehler aufgetreten!',
                            footer: response.responseText
                        })
                    }
                })
            }
        }
    </script>
}