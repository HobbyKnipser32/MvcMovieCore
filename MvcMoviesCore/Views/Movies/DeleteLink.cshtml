@model MvcMoviesCore.Models.MoviesPerson

@{
    ViewData["Title"] = "Verknüpfung entfernen";
}

<h2>Verknüpfung entfernen</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Verknüpfung</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Film:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Movies.Name)
        </dd>
        <dt>
            Darsteller:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Person.Name)
        </dd>
    </dl>
    <form asp-action="DeleteLink">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="DeleteLink" class="btn btn-default" /> |
        <a href="@ViewData["Referer"]">Back to movie details</a>
    </form>
</div>
