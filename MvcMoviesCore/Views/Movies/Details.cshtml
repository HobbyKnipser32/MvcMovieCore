@model MvcMoviesCore.Models.Movies

@{
    ViewData["Title"] = "Details - ";
}
<div class="container-fluid">
    <h2>Details</h2>

    <div>
        <h4>@Html.DisplayFor(model => model.Name)</h4>
        <input type="hidden" value="@Model.Id" id="movieID" />
        <hr />
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="form-group col-md-3">
                        <label asp-for="YearOfPublication" class="control-label">Erscheinungsjahr: </label>
                        @Html.DisplayFor(model => model.YearOfPublication)
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="Genre" class="control-label">Genre: </label>
                        @Html.DisplayFor(model => model.Genre.Name)
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="RecordCarrier.Name" class="control-label">Datenträger: </label>
                        @Html.DisplayFor(model => model.RecordCarrier.Name)
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="InStock" class="control-label">vorhanden: </label>
                        @Html.CheckBox("inStock", Model.InStock.GetValueOrDefault())
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="row">
                    <div class="form-group col-md-3">
                        <label asp-for="StorageLocation" class="control-label">Lagerort: </label>
                        @Html.DisplayFor(model => model.StorageLocation.Name)
                    </div>
                    <div class="form-group col-md-3">
                        @if (Model.Added == null || Model.Added == DateTime.MinValue)
                        {
                            <label asp-for="CreateDate" class="control-label">hinzugefügt: </label>
                            @Html.DisplayFor(model => model.CreateDate.Value)
                        }
                        else
                        {
                            <label asp-for="Added" class="control-label">hinzugefügt: </label>
                            @Html.DisplayFor(model => model.Added.Value)
                        }
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="OnWatch" class="control-label">auf der Uhr: </label>
                        @Html.DisplayFor(model => model.OnWatch)
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="LastView" class="control-label">zuletzt gesehen: </label>
                        @Html.DisplayFor(model => model.LastView)
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="row">
                    <div class="form-group col-md-3">
                        <label asp-for="LastView" class="control-label">zuletzt gesehen</label>
                        <input asp-for="LastView" class="form-control" readonly />
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="IMDB" class="control-label">Wertung IMDB</label>
                        <input asp-for="IMDB" class="form-control" readonly />
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="Ranking" class="control-label">Wertung</label>
                        <input asp-for="Ranking" class="form-control" readonly />
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="Remark" class="control-label"></label>
                        <input asp-for="Remark" class="form-control" readonly />
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="row">
                    <div class="form-group col-md-3">
                        <label asp-for="RunTime" class="control-label"></label>
                        <input asp-for="RunTime" class="form-control" readonly />
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="FileSize" class="control-label"></label>
                        <input asp-for="FileSize" class="form-control" readonly />
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="FilePath" class="control-label"></label>
                        <input asp-for="FilePath" class="form-control" readonly />
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <h4>Darsteller</h4>
        <table class="table hover cell-border compact stripe" id="movieDetails">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Geschlecht</th>
                    <th>Alter beim Dreh</th>
                    <th>Praxis</th>
                    <th></th>
                </tr>
            </thead>
        </table>
        @if (Model.Scenes != null && Model.Scenes.Any())
        {
            <hr />
            <h4>Szenen Aufschlüsselung</h4>
            <table class="table hover cell-border compact stripe" id="scenesTable">
                <tbody>
                    @{
                        var i = 0;
                    }
                    @foreach (var scene in Model.Scenes.GroupBy(g => g.Nr).OrderBy(o => o.Key))
                    {
                        var j = 0;
                        var count = 0;
                        <tr style="background-color:@(i % 2 == 0 ? "lightblue" : "lightgray")">
                            <td>
                                Szene @Html.DisplayTextFor(model => scene.Key):&nbsp;
                                @{
                                    var s = Model.Scenes.Where(w => w.Nr == scene.Key).OrderBy(o => o.Classification).ThenBy(o => o.Name).ToList();
                                    count = s.Count();
                                }
                                @foreach (var t in s)
                                {
                                    if (t.Classification < 8)
                                    {
                                        <b>
                                            @Html.DisplayTextFor(model => t.Name)
                                        </b>
                                    }
                                    else
                                    {
                                        @Html.DisplayTextFor(model => t.Name)

                                    }
                                    j++;
                                    if (j < count)
                                    {
                                        <text>
                                            ;&nbsp;
                                        </text>
                                    }

                                }
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
            <hr />
        }

        <p>
            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> | <a asp-action="Index">Back to List</a>
        </p>
    </div>
</div>
@section Scripts
{
    <partial name="_DataTableScripts" />

    <script>
        $(document).ready(function () {
            const movieId = '@Model.Id';
            if ($('#scenesTable')) {
                $('#scenesTable').DataTable({
                    ordering: true,
                    paging: false,
                    bFilter: false,
                    lengthMenu: [[10, 20, 50, 100, -1], [10, 20, 50, 100, "All"]],
                    iDisplayLength: -1,
                    fixedHeader: {
                        header: true,
                        footer: false
                    },
                    columnDefs: [
                        {
                            targets: [0],
                            searchable: true,
                            className: 'compact'
                        }
                    ]
                });
            }
            $('#movieDetails').DataTable({
                ajax: {
                    url: appRootPath + '/api/MoviesApi/' + movieId,
                    dataSrc: ''
                },
                columns: [
                    {
                        data: 'Person',
                        render: function (data, type, full, meta) {
                            if (data && type === 'display') {
                                var url = '@Url.Action("Details", "Person")' + '/' + data.Id;
                                return '<a href="' + url + '">' + data.Name; /*  + '< /a>'; */
                            }
                            return '';
                        }
                    },

                    { data: 'Person.Sex.Name' },
                    { data: 'Person.ActorsAge' },
                    {
                        data: 'Practices',
                        render: function (data, type, full, meta) {
                            if (type === 'display') {
                                if (data) {
                                    return full["Practices"];
                                }
                                else if (full['MovieRole']) {
                                    return full['MovieRole'].Name;
                                }
                            }
                            return "";
                        }
                    },
                    {
                        data: 'Id',
                        render: function (data, type, full, meta) {
                            if (data && type === 'display') {
                                var id = "'" + data + "'";
                                return '<button name="id" style="background-color: transparent; color: red; border: hidden" onClick="deleteLink(' + id + ')">Verknüpfung entfernen</button>';
                            }
                            return '';
                        },
                    }
                ],
                ordering: true,
                info: false,
                lengthMenu: [[10, 20, 50, 100, -1], [10, 20, 50, 100, "All"]],
                iDisplayLength: -1,
                fixedHeader: {
                    header: true,
                    footer: false
                },
                columnDefs: [
                    {
                        targets: [0, 1, 2, 3, 4],
                        searchable: true,
                        className: 'compact'
                    }
                ]
            });
        });

        function deleteLink(id) {
            Swal.fire({
                position: 'top-end',
                text: 'Verknüpfung löschen?',
                type: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Ja',
                cancelButtonText: 'Nein'
            }).then(function (result) {
                if (result.value) {
                    var url = appRootPath + '/api/MoviesApi/' + id;
                    $.ajax({
                        url: url,
                        type: 'POST',
                        async: false,
                        statusCode: {
                            404: function () {
                                alert("function not found");
                            }
                        },
                        success: function () {
                            $('#movieDetails').DataTable().ajax.reload();
                            Swal.fire({
                                position: 'top-end',
                                type: 'success',
                                text: 'Verknüpfung erfolgreich gelöscht.',
                                showConfirmButton: false,
                                timer: 2000
                            })
                        },
                    })
                };
            });
        };
    </script>
}