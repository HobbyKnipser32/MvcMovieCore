@model MvcMoviesCore.Models.Movies

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <input type="hidden" value="@Model.Id" id="movieID"/>
    <hr />
    <table>
        <tr>
            <td>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.RunTime)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.RunTime)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Genre)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Genre.Name)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.YearOfPublication)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.YearOfPublication)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.InStock)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.InStock)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.OnWatch)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.OnWatch)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Remark)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Remark)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.IMDB)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.IMDB)
                    </dd>
                    <dt>
                        Zur Datenbank hinzugefügt:
                    </dt>
                    <dd>
                        @if (Model.Added == null || Model.Added == DateTime.MinValue)
                        {
                            @Html.DisplayFor(moddel => Model.CreateDate)
                        }
                        else
                        {
                            @Html.DisplayFor(moddel => Model.Added)
                        }
                    </dd>
                </dl>
            </td>
            <td>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Adult)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Adult)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.ThreeD)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ThreeD)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Owner)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Owner)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Ranking)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Ranking)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.LastView)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.LastView)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.RecordCarrier)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.RecordCarrier.Name)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.StorageLocation)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.StorageLocation.Name)
                    </dd>
                </dl>
            </td>
        </tr>
    </table>
    <h4>Darsteller</h4>
    <table class="table hover cell-border compact stripe" id="movieDetails">
        <thead>
            <tr>
                <th>Name</th>
                <th>Geschlecht</th>
                <th>Alter beim Dreh</th>
                <th>Praxis</th>
                <th></th>
            </tr>
        </thead>
    </table>
    @if (Model.Scenes != null && Model.Scenes.Any())
    {
        <h4>Szenen Aufschlüsselung</h4>
        <table class="table hover cell-border compact stripe" id="scenesTable">
            <tbody>
                @{
                    var i = 0;
                }
                @foreach (var scene in Model.Scenes.GroupBy(g => g.Nr).OrderBy(o => o.Key))
                {
                    var j = 0;
                    var count = 0;
                    <tr style="background-color:@(i % 2 == 0 ? "lightblue" : "lightgray")">
                        <td>
                            Szene @Html.DisplayTextFor(model => scene.Key):&nbsp;
                            @{
                                var s = Model.Scenes.Where(w => w.Nr == scene.Key).OrderBy(o => o.Classification).ThenBy(o => o.Name).ToList();
                                count = s.Count();
                            }
                            @foreach (var t in s)
                            {
                                if (t.Classification < 8)
                                {
                                    <b>
                                        @Html.DisplayTextFor(model => t.Name)
                                    </b>
                                }
                                else
                                {
                                    @Html.DisplayTextFor(model => t.Name)

                            }
                            j++;
                            if (j < count)
                            {
                                <text>
                                    ;&nbsp;
                                </text>
                            }
                            
                        }
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
}

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> | <a asp-action="Index">Back to List</a>
</p>

@section Scripts
{
    <partial name="_DataTableScripts" />

    <script>
        $(document).ready(function () {
            const movieId = '@Model.Id';
            if ($('#scenesTable')) {
                $('#scenesTable').DataTable({
                    ordering: true,
                    lengthMenu: [[10, 20, 50, 100, -1], [10, 20, 50, 100, "All"]],
                    iDisplayLength: -1,
                    fixedHeader: {
                        header: true,
                        footer: false
                    },
                    columnDefs: [
                        {
                            targets: [0],
                            searchable: true,
                            className: 'compact'
                        }
                    ]
                });
            }
            $('#movieDetails').DataTable({
                ajax: {
                    url: appRootPath + '/api/MoviesApi/' + movieId,
                    dataSrc: ''
                },
                columns: [
                    {
                        data: 'Person',
                        render: function (data, type, full, meta) {
                            if (data && type === 'display') {
                                var url = '@Url.Action("Details", "Person")' + '/' + data.Id;
                                return '<a href="' + url + '">' + data.Name; /*  + '< /a>'; */
                            }
                            return '';
                        }
                    },

                    { data: 'Person.Sex.Name' },
                    { data: 'Person.ActorsAge' },
                    {
                        data: 'Practices',
                        render: function (data, type, full, meta) {
                            if (type === 'display') {
                                if (data) {
                                    return full["Practices"];
                                }
                                else if (full['MovieRole']) {
                                    return full['MovieRole'].Name;
                                }
                            }
                            return "";
                        }
                    },
                    {
                        data: 'Id',
                        render: function (data, type, full, meta) {
                            if (data && type === 'display') {
                                var id = "'" + data + "'";
                                return '<button name="id" style="background-color: transparent; color: red; border: hidden" onClick="deleteLink(' + id + ')">Verknüpfung entfernen</button>';
                            }
                            return '';
                        },
                    }
                ],
                ordering: true,
                lengthMenu: [[10, 20, 50, 100, -1], [10, 20, 50, 100, "All"]],
                iDisplayLength: -1,
                fixedHeader: {
                    header: true,
                    footer: false
                },
                columnDefs: [
                    {
                        targets: [0, 1, 2, 3, 4],
                        searchable: true,
                        className: 'compact'
                    }
                ]
            });
        });

        function deleteLink(id) {
            Swal.fire({
                position: 'top-end',
                text: 'Verknüpfung löschen?',
                type: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Ja',
                cancelButtonText: 'Nein'
            }).then(function (result) {
                if (result.value) {
                    var url = appRootPath + '/api/MoviesApi/' + id;
                    $.ajax({
                        url: url,
                        type: 'POST',
                        async: false,
                        statusCode: {
                            404: function () {
                                alert("function not found");
                            }
                        },
                        success: function () {
                            $('#movieDetails').DataTable().ajax.reload();
                            Swal.fire({
                                position: 'top-end',
                                type: 'success',
                                text: 'Verknüpfung erfolgreich gelöscht.',
                                showConfirmButton: false,
                                timer: 2000
                            })
                        },
                    })
                };
            });
        };
    </script>
}