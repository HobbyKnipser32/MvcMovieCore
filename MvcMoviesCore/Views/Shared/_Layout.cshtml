@inject Microsoft.Extensions.Configuration.IConfiguration _configuration
@{
    var showAdult = _configuration.GetSection("AppSettings")["ShowAdult"];
}

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movies</title>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap-utilities.min.css" />
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap-utilities.rtl.min.css" />
    <link rel="stylesheet" href="~/sweetalert2/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcMoviesCore.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                <div id="sidebar" class="collapse collapse-horizontal show border-end">
                    <div id="sidebar-nav" class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                        <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                            <span class="fs-5 d-none d-sm-inline">Menu</span>
                        </a>
                        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link align-middle px-0">
                                    <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
                                </a>
                            </li>
                            <li>
                                <a href="#submenu1" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                                    <i class="fs-4 bi-speedometer2"></i> <span class="ms-1 d-none d-sm-inline">Filme</span>
                                </a>
                                <ul class="collapse show nav flex-column ms-1" id="submenu1" data-bs-parent="#menu">
                                    <li class="w-100">
                                        <a asp-area="" asp-controller="Movies" asp-action="Index" class="nav-link px-0">
                                            <span class="d-none d-sm-inline">alle anzeigen</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-area="" asp-controller="Movies" asp-action="FileSizes" class="nav-link px-0">
                                            <span class="d-none d-sm-inline">Dateigröße ermittlen</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-area="" asp-controller="GetRandomMovie" asp-action="Index" class="nav-link px-0">
                                            <span class="d-none d-sm-inline">zufälliger Filme</span>
                                        </a>
                                    </li>

                                    @if (showAdult.Equals("true", StringComparison.CurrentCultureIgnoreCase))
                                    {
                                        <li>
                                            <a asp-area="" asp-controller="GetRandomAdultMovie" asp-action="Index" class="nav-link px-0">
                                                <span class="d-none d-sm-inline">zufälliger E-Filme</span>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>
                            @*  <li>
                            <a href="#" class="nav-link px-0 align-middle">
                            <i class="fs-4 bi-table"></i> <span class="ms-1 d-none d-sm-inline">Orders</span>
                            </a>
                            </li> *@
                            <li>
                                <a href="#submenu2" data-bs-toggle="collapse" class="nav-link px-0 align-middle ">
                                    <i class="fs-4 bi-bootstrap"></i> <span class="ms-1 d-none d-sm-inline">Personen</span>
                                </a>
                                <ul class="collapse nav flex-column ms-1" id="submenu2" data-bs-parent="#menu">
                                    <li class="w-100">
                                        <a asp-area="" asp-controller="Person" asp-action="Index" class="nav-link px-0">
                                            <span class="d-none d-sm-inline">alle anzeigen</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-area="" asp-controller="Person" asp-action="Birthdays" class="nav-link px-0">
                                            <span class="d-none d-sm-inline">Geburtstage</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            @*   <li>
                            <a href="#submenu3" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                            <i class="fs-4 bi-grid"></i> <span class="ms-1 d-none d-sm-inline">Products</span>
                            </a>
                            <ul class="collapse nav flex-column ms-1" id="submenu3" data-bs-parent="#menu">
                            <li class="w-100">
                            <a href="#" class="nav-link px-0"> <span class="d-none d-sm-inline">Product</span> 1</a>
