@using System.Globalization
<link rel="stylesheet" type="text/css" href="~/lib/datatables/css/buttons.dataTables.min.css" />
<script src="~/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="~/lib/datatables/js/jszip.min.js"></script>
<script type="text/javascript" src="~/lib/datatables/js/dataTables.buttons.min.js"></script>
<script type="text/javascript" src="~/lib/datatables/js/buttons.html5.min.js"></script>

<script>
    /* Create an array with the values of all the input boxes in a column */
    $.fn.dataTable.ext.order['dom-text'] = function (settings, col) {
        return this.api().column(col, { order: 'index' }).nodes().map(function (td, i) {
            return $('input', td).val();
        });
    }

    /* Create an array with the values of all the input boxes in a column, parsed as numbers */
    $.fn.dataTable.ext.order['dom-text-numeric'] = function (settings, col) {
        return this.api().column(col, { order: 'index' }).nodes().map(function (td, i) {
            return $('input', td).val() * 1;
        });
    }

    /* Create an array with the values of all the select options in a column */
    $.fn.dataTable.ext.order['dom-select'] = function (settings, col) {
        return this.api().column(col, { order: 'index' }).nodes().map(function (td, i) {
            return $('select', td).val();
        });
    }

    /* Create an array with the values of all the checkboxes in a column */
    $.fn.dataTable.ext.order['dom-checkbox'] = function (settings, col) {
        return this.api().column(col, { order: 'index' }).nodes().map(function (td, i) {
            return $('input', td).prop('checked') ? '1' : '0';
        });
    }
    /** Sets table's language + custom language resources for table elements */
    function getLanguageSettings() {
        var cultureInfo = '@CultureInfo.CurrentCulture.Name';
        return {
                url: '@Url.Content("~/lib/datatables/" + CultureInfo.CurrentCulture.Name + ".txt")',
                select: {
                    rows: {
                        _: cultureInfo == 'de-DE' ? "%d Zeilen ausgewählt" : "%d rows selected",
                        0: "",
                        1: cultureInfo == 'de-DE' ? "1 Zeile ausgewählt" : "1 row selected"
                    }
                }
            }
    }
</script>